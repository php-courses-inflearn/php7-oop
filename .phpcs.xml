<?xml version="1.0"?>

<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <arg name="standard" value="PSR12"></arg>
    <arg name="warning-severity" value="0"></arg>

    <file>ch1</file>
    <file>ch2</file>
    <file>ch4</file>
    <file>ch5</file>
    <file>ch6</file>

    <exclude-pattern>vendor</exclude-pattern>

    <rule ref="PSR1">
        <exclude name="PSR1.Classes.ClassDeclaration"></exclude>
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"></exclude>
    </rule>
</ruleset>
